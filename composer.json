{
    "name": "xaamin/jwt",
    "description": "PHP Implementation of JSON Web token with RSA",
    "license": "MIT",
    "keywords": [
        "token",
        "jwt",
        "laravel jwt"
    ],
    "authors": [
        {
            "name": "Benjamín Martínez Mateos",
            "email": "xaamin@outlook.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-openssl": "*"
    },
    "suggest": {
        "illuminate/support": "To use with Laravel/Lumen",
        "phpseclib/phpseclib": "To generate RSA keys to be used for JWT token generation."
    },
    "autoload": {
        "psr-4": {
            "Xaamin\\Jwt\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.5 || ^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xaamin\\Jwt\\JwtServiceProvider"
            ]
        }
    }
}
